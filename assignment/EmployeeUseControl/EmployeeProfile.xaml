<UserControl x:Class="assignment.EmployeeUseControl.EmployeeProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:assignment.EmployeeUseControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" >

            <TextBlock Text="Employee Profile" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Full Name:" FontWeight="Bold" Width="120"/>
                <TextBlock x:Name="txtFullName"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Email:" FontWeight="Bold" Width="120"/>
                <TextBlock x:Name="txtEmail"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Department:" FontWeight="Bold" Width="120"/>
                <TextBlock x:Name="txtDepartment"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Role:" FontWeight="Bold" Width="120"/>
                <TextBlock x:Name="txtRole"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Status:" FontWeight="Bold" Width="120"/>
                <TextBlock x:Name="txtStatus"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
