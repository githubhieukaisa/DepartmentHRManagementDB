<UserControl x:Class="assignment.EmployeeUseControl.EmployeeTeam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:assignment.EmployeeUseControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="My Teams" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <DataGrid x:Name="dgTeams"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="350">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Team Name" Binding="{Binding TeamName}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                    <DataGridTextColumn Header="Joined At" Binding="{Binding JoinedAt}" Width="120"/>
                    <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="120"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Done At" Binding="{Binding DoneAt}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
